@page "/medicamentos"
@using PharmaApp.Services
@inject ApiService ApiService

<h3>Medicamentos</h3>

<ul>
    @foreach (var medicamento in medicamentos)
    {
        <li>@medicamento.Nome - @medicamento.Preco</li>
    }
</ul>

@code {
    private List<MedicamentoDto> medicamentos = new List<MedicamentoDto>(); 

    protected override async Task OnInitializedAsync()
    {
        medicamentos = await ApiService.GetMedicamentosAsync();
    }
}
